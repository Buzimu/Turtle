function clearScreen()
    term.clear()
    term.setCursorPos(1,1)
end
function screenUpdate(carry,digFar,left,digBig)
    clearScreen()
        print ('Blocks Mined: '.. carry)
        print ('Blocks to go: '.. digFar)
        left = carry/digBig
        print ('Mining in progress: '.. left ..'%')
end
function dig()
    local digFar = 0
    local carry = 0
    local left = 0
    local memory = 0
    local digBig = 0
    write('How much Dig? ')
    digFar = tonumber(read())
    digBig = digFar
    while digFar > 0 do
        --[[clearScreen()
        print ('Blocks Mined: '.. carry)
        print ('Blocks to go: '.. digFar)
        left = carry/digBig
        print ('Mining in progress: '.. left ..'%')--]]
        turtle.dig()
        carry = carry +1
        turtle.forward()
        memory = memory + 1
        digFar = digFar - 1
        screenUpdate(carry,digFar,left,digBig)
    end
    turtle.turnLeft()
    turtle.turnLeft()
    while memory > 0 do
        turtle.forward()
        memory = memory - 1
    end
    turtle.turnLeft()
    turtle.turnLeft()
    print('Mining Complete!')
end
clearScreen()
dig()
